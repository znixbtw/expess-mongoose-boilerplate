{
	"env": {
		"browser": false,
		"es2021": true
	},
	"extends": [
		"airbnb-typescript/base",
		"prettier"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module",
		"project": "./tsconfig.json"
	},
	"plugins": [
		"@typescript-eslint",
		"prettier",
		"import"
	],
	"rules": {
		"prettier/prettier": "error",
		"@typescript-eslint/indent": ["error", "tab"],
		"@typescript-eslint/semi": "off",
		"no-tabs": 0,
		"semi": ["error", "always"],
		"import/extensions": [
			"error",
			"ignorePackages",
			{
				"js": "never",
				"jsx": "never",
				"ts": "never",
				"tsx": "never"
			}
		]
	}
}
